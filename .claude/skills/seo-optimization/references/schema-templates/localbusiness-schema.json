{
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "_comment_type": "For specific business types, use: Restaurant, Hotel, Store, AutoRepair, HealthAndBeautyBusiness, etc.",
  "name": "{business_name}",
  "description": "{business_description}",
  "url": "{website_url}",
  "telephone": "{phone_number}",
  "email": "{email_address}",
  "priceRange": "{price_range}",
  "_comment_priceRange": "Use $ symbols (e.g., $, $$, $$$, $$$$) or actual price range",
  "image": [
    "{business_image_url_1}",
    "{business_image_url_2}",
    "{business_image_url_3}"
  ],
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "{street_address}",
    "addressLocality": "{city}",
    "addressRegion": "{state_province}",
    "postalCode": "{postal_code}",
    "addressCountry": "{country_code}"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "{latitude}",
    "longitude": "{longitude}"
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "{opening_time}",
      "closes": "{closing_time}",
      "_comment": "Use 24-hour format, e.g., 09:00, 17:30"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Saturday",
      "opens": "{saturday_opening_time}",
      "closes": "{saturday_closing_time}"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Sunday",
      "opens": "{sunday_opening_time}",
      "closes": "{sunday_closing_time}"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{average_rating}",
    "reviewCount": "{total_reviews}",
    "bestRating": "5",
    "worstRating": "1"
  },
  "servesCuisine": ["{cuisine_type_1}", "{cuisine_type_2}"],
  "_comment_servesCuisine": "For restaurants only, remove this field for other business types",
  "menu": "{menu_url}",
  "_comment_menu": "For restaurants only, URL to menu page",
  "acceptsReservations": "True",
  "_comment_acceptsReservations": "For restaurants only, True or False"
}
