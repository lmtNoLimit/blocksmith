# =============================================================================
# AI Section Generator - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# Required variables are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# Google Gemini AI API
# -----------------------------------------------------------------------------
# [OPTIONAL] Falls back to mock AI if not set
# Get your API key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Shopify Configuration
# -----------------------------------------------------------------------------
# [AUTO] These are automatically set by Shopify CLI during `npm run dev`
# You typically don't need to set these manually
# SHOPIFY_API_KEY=
# SHOPIFY_API_SECRET=
# SHOPIFY_APP_URL=

# [OPTIONAL] Custom OAuth scopes (comma-separated)
# Default scopes are defined in shopify.app.toml
# SCOPES=read_themes,write_themes

# [OPTIONAL] Custom shop domain for specific store configurations
# SHOP_CUSTOM_DOMAIN=

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# [OPTIONAL] Override default ports
# PORT=3000
# FRONTEND_PORT=8002
# HOST=

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# [REQUIRED for production] SQLite connection string
# Development: file:dev.sqlite (created automatically)
# Production: Your database URL
DATABASE_URL=

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# [REQUIRED for password-protected storefronts]
# Encrypts storefront passwords stored in the database
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# Billing
# -----------------------------------------------------------------------------
# [OPTIONAL] Shopify billing test mode
# "true"  = Free subscriptions on development stores (default for dev)
# "false" = Production billing with real charges
BILLING_TEST_MODE=true

# -----------------------------------------------------------------------------
# Feature Flags (Development/Testing)
# -----------------------------------------------------------------------------
# [OPTIONAL] Service operation mode
# "mock" = Use mock services for themes/AI (for testing)
# "real" = Use real Shopify/AI services
# SERVICE_MODE=mock

# [OPTIONAL] Enable verbose logging
# FLAG_VERBOSE_LOGGING=false

# [OPTIONAL] Use mock theme data instead of real Shopify API
# FLAG_USE_MOCK_THEMES=false

# [OPTIONAL] Use mock AI responses instead of real Gemini API
# FLAG_USE_MOCK_AI=false

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
# [AUTO] Set automatically by npm scripts
# "development" | "production" | "test"
# NODE_ENV=development
